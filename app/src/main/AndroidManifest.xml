<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mlihat.app">

    <uses-sdk />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/tfe_ic_app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ImageClassification">
        <activity android:name="org.mlihat.app.HelpActivity"></activity>
        <activity android:name="org.mlihat.app.MenuActivity" />
        <activity android:name="org.mlihat.app.AboutMachineActivity" />
        <activity android:name="org.mlihat.app.ProfileActivity" />
        <activity android:name="org.mlihat.app.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.mlihat.app.ImageClassifier" />
    </application>

</manifest>